<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/comicLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#A1031715">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/comicImg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/comicText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_toRightOf="@+id/comicImg"
                android:text="TextView"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/comicDescrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comic Description"
                android:textColor="#FFFFFF"
                android:layout_alignStart="@+id/comicText"
                android:layout_below="@+id/comicText"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"/>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>